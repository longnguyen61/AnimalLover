<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pv.firebasedemo.UploadActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/buttonHomePage"
                android:text="Home Page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/buttonProfile"
                android:text="Profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Topic Name"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/editTextTopicName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Topic Name" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="25dp" />

        <EditText

            android:id="@+id/editTextDesciption"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:hint="Write description" />



        <ImageView
            android:background="@drawable/camera"
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center" />
        <Button

            android:text="BROWSE"
            android:id="@+id/buttonBrowse"
            android:layout_width="match_parent"
            android:onClick="buttonBrowseClick"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="buttonAddClick"
            android:text="POST" />





        <!--<ListView-->
        <!--android:id="@+id/listViewArtists"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content">-->

        <!--</ListView>-->

    </LinearLayout>

</LinearLayout>
